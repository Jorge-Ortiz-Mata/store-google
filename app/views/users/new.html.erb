<h2>¡Registrate de manera gratuita!</h2>

<div>
  <%= form_with(model: @user, class: 'flex flex-col w-full gap-5 items-center') do |f| %>
    <div class="flex flex-col w-full items-start">
      <%= f.label :email, 'Correo electrónico:' %>
      <%= f.email_field :email, class: "#{error_border(@user.errors.include?(:email))}" %>
      <% if @user.errors.include?(:email) %>
        <%= render 'shared/error_input', { object: @user, attribute: :email } %>
      <% end %>
    </div>

    <div class="flex flex-col w-full items-start gap-1">
      <%= f.label :password, 'Contraseña:' %>
      <%= f.password_field :password, class: "#{error_border(@user.errors.include?(:password))}" %>
      <span>La contraseña debe tener al menos 8 caracteres</span>
      <% if @user.errors.include?(:password) %>
        <%= render 'shared/error_input', { object: @user, attribute: :password } %>
      <% end %>
    </div>

    <div class="flex flex-col w-full items-start gap-1">
      <%= f.label :password_confirmation, 'Confirmar contraseña:' %>
      <%= f.password_field :password_confirmation, class: "#{error_border(@user.errors.include?(:password_confirmation))}" %>
      <% if @user.errors.include?(:password_confirmation) %>
        <%= render 'shared/error_input', { object: @user, attribute: :password_confirmation } %>
      <% end %>
    </div>

    <div class="flex items-center justify-center w-full">
      <%= f.submit 'Crear cuenta'%>
    </div>
  <% end %>
</div>
<p>
  Ya tienes una cuenta?
  <%= link_to login_path do %>
    Inicia sesión con tu cuenta
  <% end %>
</p>
